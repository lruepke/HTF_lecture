FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}

ddtSchemes
{
    default         Euler;
}
gradSchemes
{
    default         none;
    grad(p)         Gauss linear;
    grad(T)         Gauss linear;
    grad(pl)         Gauss linear;
}
divSchemes
{
    default         none;
    div(phi,T)      Gauss upwind;
    div((phi*interpolate(Cp)),T) Gauss vanLeer;
}
laplacianSchemes
{
    default         none;
    laplacian(kr,T) Gauss linear corrected;
    laplacian(rhorAUf,p) Gauss linear corrected;
    laplacian(rhorAUf,pl) Gauss linear corrected;
}
interpolationSchemes
{
    default         linear;
}
snGradSchemes
{
    default         corrected;
}
fluxRequired
{
    default no;
    p;
}