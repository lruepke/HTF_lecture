FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 -1 -2 0 0 0 0];

internalField   uniform 300e5;

boundaryField
{
    seafloor
    {
        type            fixedValue;
        value           uniform 300e5;
    }
    bottom
    {
        type            noFlux;
    }
    sidewalls
    {
        type            noFlux;
    }
}

